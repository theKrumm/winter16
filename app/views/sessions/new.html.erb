<div id="signin">
        <p class="welcome">Sign In to Study Buddy</p>

  <div class="row">
    <div class="small-6 small-centered columns">
      <div class="signup-panel">
    
        <%= form_for(:session, url: login_path) do |f| %>
        
        <div class="row collapse field">
          <div class="small-12 columns">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'error'%>
          </div>
        </div>
        
        <div class="row collapse field">
          <div class="small-12 columns">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'error'%>
          </div>
        </div>
          
        <div class="row collapse ">
           <div class="small-12 large-4 small-centered columns">
            <%= f.submit "Log In", :class=> "expanded button" %>
          </div>
        </div>
            
        <% end %>
    
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      </div>
    </div>
  </div>
</div>