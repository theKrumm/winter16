<p id="notice"><%= notice %></p>

<div id="list-groups">
  <div class="row">
    
    <table>
      <thead>
        <tr>
          <th>Subject</th>
          <th>Date</th>
          <th>Location</th>
          <th>Group size</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.subject %></td>
            <td><%= group.date.to_formatted_s(:long_ordinal) %></td>
            <td><%= Location.find(group.location_id).building +  Location.find(group.location_id).room%></td>
            <td><%= group.group_size %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>