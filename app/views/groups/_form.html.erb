<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="small-6 small-centered columns">
    <div class="signup-panel">
          
      <div class="row collapse">
        <div class="small-12 columns field">
          <%= f.label :primary_contact, 'Primary Contact' %>
          <%= f.text_field :primary_contact%>
        </div>
      </div>
      
      <div class="row collapse field">
        <div class="small-12 columns">
          <%= f.label :subject %>
          <%= f.text_field :subject %>
        </div>
      </div>
      
      <div class="row collapse">
        <div class="small-12 columns field">
          <%= f.label :discription, 'Discription' %>
          <%= f.text_field :discription%>
        </div>
      </div>
      
      <div class="row collapse field">
        <div class="small-6 medium-12 large-12 columns">
          <%= f.label :date %>
          <%= f.datetime_select :date,{:discard_year=> true, :use_short_month=> true, 
                                       :add_month_numbers=> true, :ampm=> true}, 
                                       {:class=> 'date-select'} %>
        </div>
      </div>
      
      <div class="row uncollapse fields">
        <div class="small-12 medium-12 large-4 columns field">
          <%= f.label :location_id, 'Location' %>
          <%= f.select(:location_id, options_for_select(Location.all.collect {|s| s.id}),
                      {}, {:class=> 'location-select'} )%>
        </div>
      
        <div class="small-12 medium-8 large-4 columns field">
          <%= f.label :group_size, 'Group Size' %>
          <%= f.number_field :group_size %>
        </div>
      
        <div class="small-12 medium-4 large-4 columns checkbox">
          <%= f.label :permission, 'Private Group' %>
          <%= f.check_box :permission %>
        </div>
      </div>
      
      <div class="row collapse">
        <div class="small-12 large-4 small-centered columns">
          <%= f.submit "Submit", class: 'button' %>
        </div>
      </div>
    <% end %>
    </div>
    <%= link_to 'Back', groups_path %>
  </div>
</div>
